&lt;UserControl
    x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.Presentation.UI.AdvancedDataGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.Presentation.UI"
    xmlns:converters="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.Presentation.Converters"
    xmlns:viewmodels="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.Presentation.ViewModels"&gt;

    &lt;UserControl.Resources&gt;
        &lt;!-- Value Converters --&gt;
        &lt;converters:ValidationSeverityToColorConverter x:Key="ValidationSeverityToColorConverter" /&gt;
        &lt;converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" /&gt;
        &lt;converters:ObjectToStringConverter x:Key="ObjectToStringConverter" /&gt;
        &lt;converters:SpecialColumnTemplateSelector x:Key="SpecialColumnTemplateSelector" /&gt;

        &lt;!-- Cell Templates for Special Columns --&gt;
        &lt;DataTemplate x:Key="CheckBoxCellTemplate" x:DataType="viewmodels:CellViewModel"&gt;
            &lt;CheckBox
                IsChecked="{x:Bind CheckBoxValue, Mode=TwoWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsEnabled="{x:Bind IsReadOnly, Converter={StaticResource BooleanNegationConverter}}" /&gt;
        &lt;/DataTemplate&gt;

        &lt;DataTemplate x:Key="DeleteButtonCellTemplate" x:DataType="viewmodels:CellViewModel"&gt;
            &lt;Button
                Content="ðŸ—‘"
                Background="{x:Bind ColorConfiguration.DeleteButtonBackgroundColor}"
                Foreground="{x:Bind ColorConfiguration.DeleteButtonForegroundColor}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="32"
                Height="24"
                Command="{Binding DataContext.DeleteRowCommand, ElementName=MainGrid}"
                ToolTipService.ToolTip="Delete this row" /&gt;
        &lt;/DataTemplate&gt;

        &lt;DataTemplate x:Key="RowNumberCellTemplate" x:DataType="viewmodels:CellViewModel"&gt;
            &lt;TextBlock
                Text="{x:Bind Address.Row}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Gray"
                FontSize="12" /&gt;
        &lt;/DataTemplate&gt;

        &lt;DataTemplate x:Key="ValidationAlertsCellTemplate" x:DataType="viewmodels:CellViewModel"&gt;
            &lt;Border
                Background="{x:Bind BackgroundColor, Mode=OneWay}"
                BorderBrush="{x:Bind BorderColor, Mode=OneWay}"
                BorderThickness="1"
                CornerRadius="2"
                Visibility="{x:Bind HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}"&gt;
                &lt;TextBlock
                    Text="âš "
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{x:Bind ForegroundColor, Mode=OneWay}"
                    ToolTipService.ToolTip="{x:Bind ValidationErrorMessages, Mode=OneWay}" /&gt;
            &lt;/Border&gt;
        &lt;/DataTemplate&gt;

        &lt;DataTemplate x:Key="StandardCellTemplate" x:DataType="viewmodels:CellViewModel"&gt;
            &lt;Border
                Background="{x:Bind BackgroundColor, Mode=OneWay}"
                BorderBrush="{x:Bind BorderColor, Mode=OneWay}"
                BorderThickness="1"
                Padding="4,2"&gt;
                &lt;TextBox
                    Text="{x:Bind DisplayValue, Mode=TwoWay}"
                    IsReadOnly="{x:Bind IsReadOnly}"
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="{x:Bind ForegroundColor, Mode=OneWay}"
                    ToolTipService.ToolTip="{x:Bind ValidationErrorMessages, Mode=OneWay}"
                    GotFocus="OnCellGotFocus"
                    LostFocus="OnCellLostFocus"
                    TextChanged="OnCellTextChanged" /&gt;
            &lt;/Border&gt;
        &lt;/DataTemplate&gt;

        &lt;!-- Column Header Template --&gt;
        &lt;DataTemplate x:Key="ColumnHeaderTemplate" x:DataType="viewmodels:DataColumnViewModel"&gt;
            &lt;Grid Background="{x:Bind HeaderBackgroundColor, Mode=OneWay}"&gt;
                &lt;Grid.ColumnDefinitions&gt;
                    &lt;ColumnDefinition Width="*" /&gt;
                    &lt;ColumnDefinition Width="Auto" /&gt;
                &lt;/Grid.ColumnDefinitions&gt;

                &lt;TextBlock
                    Grid.Column="0"
                    Text="{x:Bind HeaderText, Mode=OneWay}"
                    Foreground="{x:Bind HeaderForegroundColor, Mode=OneWay}"
                    HorizontalAlignment="{x:Bind TextAlignment}"
                    VerticalAlignment="Center"
                    Margin="8,4"
                    FontWeight="SemiBold"
                    ToolTipService.ToolTip="{x:Bind HeaderTooltip, Mode=OneWay}" /&gt;

                &lt;!-- Column Resize Thumb --&gt;
                &lt;Thumb
                    Grid.Column="1"
                    Width="4"
                    Background="Transparent"
                    Cursor="SizeWE"
                    Visibility="{x:Bind IsResizable, Converter={StaticResource BooleanToVisibilityConverter}}"
                    DragStarted="OnColumnResizeStarted"
                    DragDelta="OnColumnResizeDelta"
                    DragCompleted="OnColumnResizeCompleted" /&gt;
            &lt;/Grid&gt;
        &lt;/DataTemplate&gt;
    &lt;/UserControl.Resources&gt;

    &lt;Grid x:Name="MainGrid"&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="Auto" /&gt; &lt;!-- Toolbar --&gt;
            &lt;RowDefinition Height="*" /&gt;    &lt;!-- Data Grid --&gt;
            &lt;RowDefinition Height="Auto" /&gt; &lt;!-- Status Bar --&gt;
        &lt;/Grid.RowDefinitions&gt;

        &lt;!-- Toolbar --&gt;
        &lt;Border Grid.Row="0"
                Background="{x:Bind ViewModel.ColorConfiguration.HeaderBackgroundColor, Mode=OneWay}"
                BorderBrush="{x:Bind ViewModel.ColorConfiguration.HeaderBorderColor, Mode=OneWay}"
                BorderThickness="0,0,0,1"
                Padding="8,4"&gt;
            &lt;StackPanel Orientation="Horizontal" Spacing="8"&gt;
                &lt;Button
                    Content="Add Row"
                    Command="{x:Bind ViewModel.AddRowCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanNegationConverter}}" /&gt;

                &lt;Button
                    Content="Delete Row"
                    Command="{x:Bind ViewModel.DeleteRowCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanNegationConverter}}" /&gt;

                &lt;Separator /&gt;

                &lt;Button
                    Content="Commit Changes"
                    Command="{x:Bind ViewModel.CommitChangesCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanNegationConverter}}" /&gt;

                &lt;Button
                    Content="Revert Changes"
                    Command="{x:Bind ViewModel.RevertChangesCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanNegationConverter}}" /&gt;

                &lt;Separator /&gt;

                &lt;Button
                    Content="Refresh"
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanNegationConverter}}"
                    Visibility="{x:Bind IsHeadlessMode, Converter={StaticResource BooleanToVisibilityConverter}}" /&gt;
            &lt;/StackPanel&gt;
        &lt;/Border&gt;

        &lt;!-- Data Grid --&gt;
        &lt;ScrollViewer Grid.Row="1"
                      ZoomMode="Enabled"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="{x:Bind ViewModel.ColorConfiguration.GridBackgroundColor, Mode=OneWay}"&gt;

            &lt;Grid x:Name="DataGridContainer"&gt;
                &lt;Grid.RowDefinitions&gt;
                    &lt;RowDefinition Height="Auto" /&gt; &lt;!-- Headers --&gt;
                    &lt;RowDefinition Height="*" /&gt;    &lt;!-- Data Rows --&gt;
                &lt;/Grid.RowDefinitions&gt;

                &lt;!-- Column Headers --&gt;
                &lt;ItemsRepeater Grid.Row="0"
                               x:Name="ColumnHeadersRepeater"
                               ItemsSource="{x:Bind ViewModel.Columns}"
                               ItemTemplate="{StaticResource ColumnHeaderTemplate}"&gt;
                    &lt;ItemsRepeater.Layout&gt;
                        &lt;StackLayout Orientation="Horizontal" /&gt;
                    &lt;/ItemsRepeater.Layout&gt;
                &lt;/ItemsRepeater&gt;

                &lt;!-- Data Rows --&gt;
                &lt;ItemsRepeater Grid.Row="1"
                               x:Name="DataRowsRepeater"
                               ItemsSource="{x:Bind ViewModel.Rows}"&gt;
                    &lt;ItemsRepeater.Layout&gt;
                        &lt;StackLayout Orientation="Vertical" /&gt;
                    &lt;/ItemsRepeater.Layout&gt;

                    &lt;ItemsRepeater.ItemTemplate&gt;
                        &lt;DataTemplate x:DataType="viewmodels:DataRowViewModel"&gt;
                            &lt;Border
                                Background="{x:Bind ColorConfiguration.GridBackgroundColor, Mode=OneWay}"
                                BorderBrush="{x:Bind ColorConfiguration.GridBorderColor, Mode=OneWay}"
                                BorderThickness="0,0,0,1"&gt;

                                &lt;ItemsRepeater
                                    ItemsSource="{x:Bind Cells}"
                                    ItemTemplateSelector="{StaticResource SpecialColumnTemplateSelector}"&gt;
                                    &lt;ItemsRepeater.Layout&gt;
                                        &lt;StackLayout Orientation="Horizontal" /&gt;
                                    &lt;/ItemsRepeater.Layout&gt;
                                &lt;/ItemsRepeater&gt;
                            &lt;/Border&gt;
                        &lt;/DataTemplate&gt;
                    &lt;/ItemsRepeater.ItemTemplate&gt;
                &lt;/ItemsRepeater&gt;
            &lt;/Grid&gt;
        &lt;/ScrollViewer&gt;

        &lt;!-- Status Bar --&gt;
        &lt;Border Grid.Row="2"
                Background="{x:Bind ViewModel.ColorConfiguration.HeaderBackgroundColor, Mode=OneWay}"
                BorderBrush="{x:Bind ViewModel.ColorConfiguration.HeaderBorderColor, Mode=OneWay}"
                BorderThickness="0,1,0,0"
                Padding="8,4"&gt;
            &lt;Grid&gt;
                &lt;Grid.ColumnDefinitions&gt;
                    &lt;ColumnDefinition Width="*" /&gt;
                    &lt;ColumnDefinition Width="Auto" /&gt;
                &lt;/Grid.ColumnDefinitions&gt;

                &lt;TextBlock
                    Grid.Column="0"
                    Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                    VerticalAlignment="Center" /&gt;

                &lt;StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16"&gt;
                    &lt;TextBlock
                        Text="{x:Bind RowCountText, Mode=OneWay}"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="Gray" /&gt;

                    &lt;ProgressRing
                        IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        Width="16"
                        Height="16"
                        Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" /&gt;
                &lt;/StackPanel&gt;
            &lt;/Grid&gt;
        &lt;/Border&gt;
    &lt;/Grid&gt;
&lt;/UserControl&gt;